{
  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack"
      ]
    }
  },
  "dockerComposeFile": "docker-compose.yml",
  "features": {
    "ghcr.io/devcontainers/features/nix:1": {
      "multiUser": false,
      "packages": "jdk21, lazygit, neovim, starship, tmux",
      "useAttributePath": true,
      "version": "latest"
    },
    "ghcr.io/kreemer/features/stow:1": {},
    "ghcr.io/sammonsjl/devcontainer-features/generator-liferay-theme:1": {},
    "ghcr.io/sammonsjl/devcontainer-features/liferay-blade-cli:1.0.2": {}
  },
  "initializeCommand": "echo LOCAL_WORKSPACE_FOLDER=${localWorkspaceFolderBasename} > .devcontainer/.env && .devcontainer/init",
  "name": "Liferay Workspace",
  "onCreateCommand": "sudo chsh -s /usr/bin/zsh $USER",
  "remoteEnv": {
    "LANG": "en_US.UTF-8"
  },
  "service": "devcontainer",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}"
}
