{
  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack"
      ]
    }
  },
  "dockerComposeFile": "docker-compose.yml",
  "features": {
    "ghcr.io/devcontainers/features/nix:1": {
      "multiUser": false,
      "packages": "lazygit, neovim, nodejs_22, starship, tmux",
      "useAttributePath": true,
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    },
    "ghcr.io/kreemer/features/stow:1": {}
  },
  "initializeCommand": "echo LOCAL_WORKSPACE_FOLDER=${localWorkspaceFolderBasename} > .devcontainer/.env && .devcontainer/init",
  "mounts": [
    "source=${localWorkspaceFolder}/.devcontainer/create,target=/home/vscode/create,type=bind,consistency=cached"
  ],
  "name": "Liferay Workspace",
  "postCreateCommand": "/home/vscode/create",
  "remoteEnv": {
    "LANG": "en_US.UTF-8"
  },
  "remoteUser": "vscode",
  "service": "devcontainer",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}"
}
